<config>
	<modules>
        <Krp_Eximbay>
            <version>2.0.0</version>
        </Krp_Eximbay>
    </modules> 
	<global> 
		<models> 
			<eximbay> 
				<class>Krp_Eximbay_Model</class> 
			</eximbay> 
		</models> 
		<helpers>
            <eximbay>
                <class>Krp_Eximbay_Helper</class>
            </eximbay>
        </helpers>      
		<resources>
			<eximbay_setup> 
				<setup> 
					<module>Krp_Eximbay</module> 
				</setup> 
				<connection> 
					<use>core_setup</use> 
				</connection> 
			</eximbay_setup> 
			<eximbay_write> 
				<use>core_write</use> 
			</eximbay_write> 
			<eximbay_read> 
				<use>core_read</use> 
			</eximbay_read> 
		</resources>
	 	<blocks>
            <eximbay><class>Krp_Eximbay_Block</class></eximbay>
            <checkout>
                <rewrite>
                    <onepage_payment_methods>Krp_Eximbay_Block_Checkout_Onepage_Payment_Methods</onepage_payment_methods>
                </rewrite>
            </checkout>
        </blocks>
         <payment>
            <groups>
                <xbay>Eximbay</xbay>
            </groups>
        </payment>
	</global>   
	<frontend>
        <secure_url>
            <eximbay_processing>/eximbay/processing</eximbay_processing>
        </secure_url>
        <routers>
            <eximbay>
                <use>standard</use>
                <args>
                    <module>Krp_Eximbay</module>
                    <frontName>eximbay</frontName>
                </args>
            </eximbay>
        </routers>
        <layout>
            <updates>
                <eximbay>
                    <file>eximbay.xml</file>
                </eximbay>
            </updates>
        </layout>
    </frontend>
	<admin>
         <routers>
            <adminhtml>
                <args>
                    <modules>
                        <eximbay after="Mage_Adminhtml">Krp_Eximbay</eximbay>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
	<adminhtml>
        <translate>
            <modules>
                <Krp_Eximbay>
                    <files>
                        <default>Krp_Eximbay.csv</default>
                    </files>
                </Krp_Eximbay>
            </modules>
        </translate>
        <layout>
            <updates>
                <eximbay>
                    <file>eximbay.xml</file>
                </eximbay>
            </updates>
        </layout>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <eximbay translate="title" module="eximbay">
                                            <title>Eximbay Settings</title>
                                        </eximbay>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
	
	<default> 
		<payment> 			
			<eximbay_acc>
                <group>xbay</group>
                <active>1</active>
                <model>eximbay/acc</model>
                <title>Credit Card</title>
                <order_status>processing</order_status>
                <allowspecific>0</allowspecific>
                <sort_order>1</sort_order>
            </eximbay_acc>
            <eximbay_ppl>
				<group>xbay</group>
				<active>0</active>
				<model>eximbay/ppl</model>
				<title>PayPal</title>
				<order_status>processing</order_status>
				<sort_order>2</sort_order>
			</eximbay_ppl>
			<eximbay_cup>
				<group>xbay</group>
				<active>0</active>
				<model>eximbay/cup</model>
				<title>China UnionPay</title>
				<order_status>processing</order_status>
				<sort_order>3</sort_order>
			</eximbay_cup>
            <eximbay_alp>
				<group>xbay</group>
				<active>0</active>
				<model>eximbay/alp</model>
				<title>Alipay</title>
				<order_status>processing</order_status>
				<sort_order>4</sort_order>
			</eximbay_alp>
			<eximbay_tnp>
				<group>xbay</group>
				<active>0</active>
				<model>eximbay/tnp</model>
				<title>Tenpay</title>
				<order_status>processing</order_status>
				<sort_order>5</sort_order>
			</eximbay_tnp>
			<eximbay_wct>
				<group>xbay</group>
				<active>0</active>
				<model>eximbay/wct</model>
				<title>WeChat</title>
				<order_status>processing</order_status>
				<sort_order>6</sort_order>
			</eximbay_wct>
			<eximbay_nnb>
				<group>xbay</group>
				<active>0</active>
				<model>eximbay/nnb</model>
				<title>99Bill</title>
				<order_status>processing</order_status>
				<sort_order>7</sort_order>
			</eximbay_nnb>
			<eximbay_ecn>
				<group>xbay</group>
				<active>0</active>
				<model>eximbay/ecn</model>
				<title>Cash Payment (Japan)</title>
				<order_status>processing</order_status>
				<sort_order>8</sort_order>
			</eximbay_ecn>
			<eximbay_all>
				<group>xbay</group>
				<active>0</active>
				<model>eximbay/all</model>
				<title>All-in Payment</title>
				<order_status>processing</order_status>
				<sort_order>9</sort_order>
			</eximbay_all>
		</payment>
		<eximbay>
            <settings>
                <activationstatus>0</activationstatus>
            </settings>
        </eximbay> 
	</default> 
</config>